<div class="container">
  <h1>Stupid Coaching</h1>
  <div class="row">
    <div class="col-6 border-5 border-start p-3">
      <p><%= @question %></p>
      <span class="fst-italic">—You</span>
    </div>
  </div>
  <div class="row mt-3 mb-3">
    <div class="col-6 border-5 border-start bg-warning bg-opacity-25 p-3">
      <p class="fw-bolder"><%= @answer %></p>
      <span class="fst-italic">—Your coach</span>
    </div>
  </div>
  <%= link_to 'Ask another question', ask_path %>
</div>
